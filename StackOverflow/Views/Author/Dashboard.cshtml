@model IEnumerable<Model.Models.Blog>

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 id="Dashboard">Dashboard of @ViewBag.name</h2>


<div>
    @Html.ActionLink("Create new blog", "CreateBlog", "Blog", new { area = "" }, new { @class = "navbar-brand" })
</div>

<br />

<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.Titile)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Titile)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>              
                @Html.ActionLink("Details", "Details", new { id = item.Id })              
            </td>
        </tr>
    }

</table>

<br />
<br />